{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <script>
      window.addEventListener('load', () => {
        const eventSource = new EventSource("{{ mercure('chat')|escape('js') }}");
        eventSource.onmessage = event => {
          document.getElementById('chat').innerHTML = event.data;
        }
      });
    </script>
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h2 class="mb-5">Hello, this is your new Symfony application âœ…</h2>

        <table class="table table-striped">
            <tr>
                <th>Test name</th>
                <th>Test result</th>
            </tr>
            <tr>
                <td>Cron, mercure. Wait a minute to see any info in this column to check</td>
                <td>
                    <div id="chat">
                    </div>
                </td>
            </tr>
            <tr>
                <td>Logged In User ?</td>
                <td>
                    {% if app.user %}
                        <p>Email: {{ app.user.email }}</p>
                        <a href="{{ path('app_logout') }}">Logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">Login (user@example.com/passpass)</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td>Timezone</td>
                <td>
                    {{ tz }} {{ 'now'|date('Y-m-d H:i:s') }}
                </td>
            </tr>
            <tr>
                <td>Upload</td>
                <td>
                    <form method="POST" enctype="multipart/form-data" action="/">
                        <input type="file" name="upload">
                        <input type="submit">
                        Max size: {{ upload_limit }}

                    </form>
                    {% for file in files %}
                        {{ file.filename }} {{ file.size }}
                    {% endfor %}
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
